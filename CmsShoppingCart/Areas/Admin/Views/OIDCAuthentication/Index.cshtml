@model IEnumerable<CmsShoppingCart.WebApp.Models.Authentication.OIDC.IdentityProvider>;

@{
    ViewData["Title"] = "Single sign-on methods";
}

<h1>Single sign-on</h1>

<p>
    <a asp-action="Create">Create new OIDC provider</a>
</p>

@if (Model.Count() == 0)
{
    <h3 class="text-center">There are no OIDC priveders for single sign-on</h3>
}
else
{    
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Provider name</th>
            <th>Application Id</th>
            <th>Provider URL</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var provider in Model)
        {
            <tr>
                <td>@provider.Id</td>
                <td>@provider.Name</td>
                <td>@provider.ApplicationId</td>
                <td>@provider.Url</td>
                <td><img src="~/media/sso-icons/@provider.Image" width="64" alt="@provider.Image" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@provider.Id">Edit</a> |
                    <a class="confimDeletion" asp-action="Delete" asp-route-id="@provider.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
