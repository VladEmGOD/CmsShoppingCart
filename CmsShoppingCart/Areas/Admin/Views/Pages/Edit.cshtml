@model CmsShoppingCart.Models.Page

<h4>Edit Page</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Sorting" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Contetnt" class="control-label"></label>
                <textarea asp-for="Contetnt" class="form-control"></textarea>
                <span asp-validation-for="Contetnt" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        CKEDITOR.replace("Contetnt");
    </script>
}

